{
  "name": "skillbridge-microservices",
  "version": "1.0.0",
  "description": "SkillBridge Pro backend microservices with API Gateway",
  "scripts": {
    "start": "concurrently \"npm run start:gateway\" \"npm run start:user\" \"npm run start:project\"",
    "start:gateway": "cd api-gateway && npm run dev",
    "start:user": "cd services/user-service && npm run dev",
    "start:project": "cd services/project-service && npm run dev",
    
    "install:all": "npm install && cd api-gateway && npm install && cd ../services/user-service && npm install && cd ../project-service && npm install",

    "db:generate": "cd services/user-service && npm run db:generate",
    "db:migrate": "cd services/user-service && npm run db:migrate",
    "db:seed": "cd services/user-service && npm run db:seed",

    "db:generate:project": "cd services/project-service && npm run db:generate",
    "db:migrate:project": "cd services/project-service && npm run db:migrate",
    "db:seed:project": "cd services/project-service && npm run db:seed"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.0",
    "drizzle-orm": "^0.44.2",
    "express": "^5.1.0",
    "express-http-proxy": "^2.1.1",
    "express-openapi-validator": "^5.5.7",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "rotating-file-stream": "^3.2.6",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "yamljs": "^0.3.0"
  }
}
