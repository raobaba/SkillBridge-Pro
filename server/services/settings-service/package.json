{
  "name": "settings-service",
  "version": "1.0.0",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "nodemon src/server.js",
    "dev": "nodemon src/server.js",
    "db:generate": "drizzle-kit generate",
    "db:create": "npm run db:migrate",
    "db:migrate": "cross-env SERVICE_NAME=settings-service node ../../shared/migration/migrate.js",
    "db:rollback": "cross-env SERVICE_NAME=settings-service node ../../shared/migration/rollback.js",
    "db:status": "cross-env SERVICE_NAME=settings-service node ../../shared/migration/status.js",
    "db:reset": "npm run db:rollback && npm run db:migrate",
    "db:seed": "node src/db/seed.js seed",
    "db:seed:clear": "node src/db/seed.js clear",
    "db:seed:reset": "node src/db/seed.js reset",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:test": "node src/db/test-seed.js",
    "db:test:user": "node src/db/test-seed.js",
    "build": "drizzle-kit generate && npm run db:migrate",
    "fresh": "npm run db:reset && npm run db:seed"
  },
  "dependencies": {
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.2",
    "express-fileupload": "^1.5.2",
    "express-session": "^1.18.2",
    "pg": "^8.16.3",
    "shared": "file:../../shared"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.4",
    "nodemon": "^3.1.10"
  }
}
